root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{css,scss,less,yml,yaml,json,md,rst}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{rst,rst.txt}]
indent_size = 3

[*.py]
combine_as_imports = true
multi_line_output = 4
quote_type = single

[Makefile*]
indent_style = tab
